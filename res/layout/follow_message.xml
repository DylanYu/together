<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="fill_parent"    android:layout_height="fill_parent"    android:background="@color/GhostWhite"    android:orientation="vertical" >    <LinearLayout        android:layout_width="fill_parent"        android:layout_height="43dp"        android:layout_gravity="center"        android:gravity="center"        android:background="@color/deepSkyBlue"        android:orientation="horizontal" >        <TextView        android:layout_width="fill_parent"        android:layout_height="wrap_content"        android:layout_gravity="center"        android:gravity="center"        android:text="@string/event_info"        android:textColor="@color/white"        android:textSize="22dp" />    </LinearLayout>    <LinearLayout        android:layout_width="fill_parent"        android:layout_height="fill_parent"        android:orientation="vertical" >        <LinearLayout            android:layout_width="fill_parent"            android:layout_height="100dp"            android:orientation="horizontal" >            <TextView                android:id="@+id/message_in_follow"                android:layout_width="250dp"                android:layout_height="wrap_content"                android:gravity="center_horizontal"                android:paddingRight="10dp"                android:textColor="@color/white" />            <LinearLayout                android:layout_width="fill_parent"                android:layout_height="100dp"                android:paddingRight="1dp"                     android:paddingTop="10dp"                android:orientation="vertical" >                <TextView                    android:id="@+id/participate"                    android:layout_width="80dp"                    android:layout_height="wrap_content"                    android:background="@drawable/txt_style"                    android:gravity="center"                    android:text="@string/participate"                    android:textColor="@color/white"                    android:textSize="20dp" />            </LinearLayout>        </LinearLayout>        <com.baidu.mapapi.map.MapView            android:id="@+id/followmap"            android:layout_width="fill_parent"            android:layout_height="396dp"            android:layout_weight="1.07"            android:clickable="true" />        <Button            android:id="@+id/button1"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="Button" />    </LinearLayout></LinearLayout>