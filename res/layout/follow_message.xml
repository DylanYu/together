<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="fill_parent"    android:layout_height="fill_parent"    android:background="@drawable/bg_box"    android:orientation="vertical" >        <TextView            android:layout_width="fill_parent"            android:layout_height="wrap_content"            android:layout_gravity="center"            android:gravity="center"            android:text="@string/event_info"            android:textColor="@color/white"            android:textSize="22dp" />    <LinearLayout        android:layout_width="fill_parent"        android:layout_height="fill_parent"        android:background="@drawable/bg_box"        android:orientation="vertical" >        <LinearLayout             android:layout_width="fill_parent"	        android:layout_height="100dp"	        android:background="@drawable/bg_box"	        android:orientation="horizontal" >        <TextView            android:id="@+id/message_in_follow"            android:layout_width="300dp"            android:layout_height="wrap_content"            android:gravity="center_horizontal"            android:paddingRight="10dp"            android:background="@drawable/bg_box"            android:textColor="@color/white" />        <LinearLayout             android:layout_width="fill_parent"	        android:layout_height="100dp"	        android:background="@drawable/bg_box"	        android:orientation="vertical">	        <TextView	            android:id="@+id/participate"	            android:layout_width="50dp"	            android:layout_height="wrap_content"	            android:gravity="center_horizontal"	            android:paddingRight="10dp"	            android:textSize="20dp"	            android:background="@drawable/bg_box"	            android:text="@string/participate"	            android:textColor="@color/white" />	        <TextView	            android:id="@+id/follower"	            android:layout_width="50dp"	            android:layout_height="wrap_content"	            android:gravity="center_horizontal"	            android:paddingRight="10dp"	            android:textSize="20dp"	            android:background="@drawable/bg_box"	            android:text="@string/follower"	            android:textColor="@color/white" />	        </LinearLayout>        </LinearLayout>        <com.baidu.mapapi.map.MapView            android:id="@+id/followmap"            android:layout_width="fill_parent"            android:layout_height="396dp"            android:layout_weight="1.07"            android:clickable="true" />        <LinearLayout            android:layout_width="fill_parent"            android:layout_height="52dp"            android:background="@drawable/bg_box"            android:orientation="horizontal" >        <Button            android:id="@+id/button1"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="Button" />        <Button            android:id="@+id/button2"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="Button" />        </LinearLayout>           </LinearLayout></LinearLayout> 