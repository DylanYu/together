<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="fill_parent"    android:layout_height="fill_parent"    android:background="@drawable/bg_box"    android:orientation="vertical" >    <LinearLayout        android:layout_width="fill_parent"        android:layout_height="43dp"        android:background="@color/deepSkyBlue"        android:gravity="center"        android:orientation="horizontal" >        <TextView            android:id="@+id/mySendText"            android:layout_width="100dp"            android:layout_height="30dp"            android:layout_gravity="center"            android:text="@string/send_by"            android:textColor="@color/white"            android:textSize="22dp" />        <TextView            android:id="@+id/myFollowedText"            android:layout_width="100dp"            android:layout_height="30dp"            android:layout_gravity="center"            android:text="@string/followed_by"            android:textColor="@color/white"            android:textSize="22dp" />    </LinearLayout>    <RelativeLayout        android:layout_width="fill_parent"        android:layout_height="fill_parent" >        <together.widgets.PullToRefreshList            android:id="@+id/android:list"            android:layout_width="fill_parent"            android:layout_height="fill_parent"            android:divider="@color/black"            android:dividerHeight="1.5px" />    </RelativeLayout></LinearLayout>